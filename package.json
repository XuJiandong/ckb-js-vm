{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "format": "pnpm -r run format",
    "check:format": "pnpm -r run check:format",
    "publish": "pnpm build && pnpm -r run publish",
    "docs": "typedoc"
  },
  "devDependencies": {
    "esbuild": "0.24.2",
    "eslint": "9.18.0",
    "prettier": "3.4.2",
    "typedoc": "0.27.6",
    "typedoc-material-theme": "^1.1.0",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
